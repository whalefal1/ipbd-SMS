<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ipbd.ipbdsms.mapper.TbSignInfoMapper">

    <resultMap id="BaseResultMap" type="com.ipbd.ipbdsms.entity.TbSignInfo">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="semester" column="semester" jdbcType="VARCHAR"/>
            <result property="userId" column="user_id" jdbcType="INTEGER"/>
            <result property="signUpStatus" column="sign_up_status" jdbcType="INTEGER"/>
            <result property="signUpRemark" column="sign_up_remark" jdbcType="VARCHAR"/>
            <result property="signOutStatus" column="sign_out_status" jdbcType="INTEGER"/>
            <result property="signOutRemark" column="sign_out_remark" jdbcType="VARCHAR"/>
            <result property="stuYear" column="stu_year" jdbcType="INTEGER"/>
            <result property="stuWeek" column="stu_week" jdbcType="INTEGER"/>
            <result property="stuWeekDay" column="stu_week_day" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,semester,user_id,
        sign_up_status,sign_up_remark,sign_out_status,
        sign_out_remark,stu_year,stu_week,
        stu_week_day
    </sql>

    <insert id="saveSignInfoList" parameterType="collection" useGeneratedKeys="true" keyProperty="id">
        insert into tb_sign_info (semester,user_id,sign_up_status,sign_up_remark,sign_out_status,sign_out_remark,stu_year,stu_week,stu_week_day)
        values
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.semester},#{item.userId},#{item.signUpStatus},#{item.signUpRemark},#{item.signOutStatus},#{item.signOutRemark},#{item.stuYear},#{item.stuWeek},#{item.stuWeekDay})
        </foreach>
    </insert>
</mapper>
