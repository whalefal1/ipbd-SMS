<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ipbd.ipbdsms.mapper.TbPlanMapper">

    <resultMap id="BaseResultMap" type="com.ipbd.ipbdsms.entity.TbPlan">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="stuId" column="stu_id" jdbcType="INTEGER"/>
            <result property="week" column="week" jdbcType="INTEGER"/>
            <result property="thisWeekLearning" column="this_week_learning" jdbcType="VARCHAR"/>
            <result property="nextWeekPlan" column="next_week_plan" jdbcType="VARCHAR"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,stu_id,week,
        this_week_learning,next_week_plan,create_time,
        update_time
    </sql>


    <update id="updateByUserId" parameterType="com.ipbd.ipbdsms.entity.TbPlan">
        update tb_plan this_week_learning = #{thisWeekLearning,jdbcType=VARCHAR},
        next_week_plan = #{nextWeekPlan,jdbcType=VARCHAR}
        where stu_id = #{stuId,jdbcType=INTEGER}
    </update>
</mapper>
